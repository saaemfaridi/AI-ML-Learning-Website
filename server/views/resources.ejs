                    <rect x="465" y="170" width="55" height="70" rx="3" fill="#4f46e5" fill-opacity="0.7"/>
                    <rect x="530" y="170" width="40" height="70" rx="3" fill="#4f46e5" fill-opacity="0.8"/>
                    <rect x="580" y="170" width="30" height="70" rx="3" fill="#4f46e5" fill-opacity="0.5"/>
                    
                    <!-- Books on Middle Shelf -->
                    <rect x="190" y="270" width="50" height="70" rx="3" fill="#4f46e5" fill-opacity="0.7"/>
                    <rect x="250" y="270" width="40" height="70" rx="3" fill="#4f46e5" fill-opacity="0.9"/>
                    <rect x="300" y="270" width="30" height="70" rx="3" fill="#4f46e5" fill-opacity="0.6"/>
                    <rect x="340" y="270" width="45" height="70" rx="3" fill="#4f46e5" fill-opacity="0.8"/>
                    <rect x="395" y="270" width="35" height="70" rx="3" fill="#4f46e5" fill-opacity="0.5"/>
                    <rect x="440" y="270" width="55" height="70" rx="3" fill="#4f46e5" fill-opacity="0.7"/>
