                </svg>
            </div>
        </div>
    </div>
</section>

<!-- Resource Filters -->
<section class="py-4">
    <div class="container">
        <div class="d-flex flex-wrap justify-content-center gap-2 mb-4" data-aos="fade-up">
            <button class="btn btn-primary resource-filter-btn active" data-category="all">All Resources</button>
            <button class="btn btn-outline-white resource-filter-btn" data-category="Beginner">Beginner</button>
            <button class="btn btn-outline-white resource-filter-btn" data-category="Intermediate">Intermediate</button>
            <button class="btn btn-outline-white resource-filter-btn" data-category="Advanced">Advanced</button>
        </div>
        
        <div class="resource-grid" data-aos="fade-up">
            <% resources.forEach(resource => { %>
                <div class="card resource-card h-100" data-category="<%= resource.category %>">
                    <div class="card-img-top resource-image" style="height: 160px; background-color: #f3f4f6; display: flex; align-items: center; justify-content: center;">
                        <div style="text-align: center;">
                            <% 
                            let iconClass = "fas fa-book";
                            if (resource.title.includes("TensorFlow")) {
                                iconClass = "fab fa-tensorflow";
                            } else if (resource.title.includes("PyTorch")) {
                                iconClass = "fab fa-python";
                            } else if (resource.title.includes("Kaggle")) {
                                iconClass = "fas fa-chart-bar";
                            } else if (resource.title.includes("Course")) {
                                iconClass = "fas fa-graduation-cap";
                            } else if (resource.title.includes("Documentation")) {
                                iconClass = "fas fa-file-code";
                            } else if (resource.title.includes("Tutorial")) {
                                iconClass = "fas fa-laptop-code";
                            }
                            %>
                            <i class="<%= iconClass %> fa-3x text-primary mb-2"></i>
                            <h5><%= resource.title.split(' ')[0] %></h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <span class="badge bg-primary mb-2"><%= resource.category %></span>
                        <h3 class="card-title"><%= resource.title %></h3>
                        <p class="card-text"><%= resource.description %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-star text-warning me-1"></i>
                                <span><%= resource.rating %>/5.0</span>
                            </div>
                            <a href="<%= resource.url %>" class="btn btn-primary btn-sm" target="_blank">Learn More</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Additional Resources Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5" data-aos="fade-up">Additional Learning Platforms</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fab fa-youtube fa-3x text-danger"></i>
                        </div>
                        <h3 class="h4 mb-3">YouTube Channels</h3>
                        <p class="text-muted mb-4">Free video tutorials and lectures from top AI/ML educators and researchers.</p>
                        <a href="/videos" class="btn btn-outline-white">Explore Videos</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-graduation-cap fa-3x text-primary"></i>
                        </div>
                        <h3 class="h4 mb-3">Online Courses</h3>
                        <p class="text-muted mb-4">Structured learning experiences with certificates from platforms like Coursera and edX.</p>
                        <a href="https://www.coursera.org/browse/data-science/machine-learning" class="btn btn-outline-white" target="_blank">Find Courses</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-book fa-3x text-success"></i>
                        </div>
                        <h3 class="h4 mb-3">Books & Papers</h3>
                        <p class="text-muted mb-4">Essential reading materials for in-depth understanding of AI/ML concepts and research.</p>
                        <a href="https://arxiv.org/list/cs.AI/recent" class="btn btn-outline-white" target="_blank">Browse Papers</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-primary text-white text-center">
    <div class="container py-4">
        <h2 class="h1 mb-4" data-aos="fade-up">Ready to Apply Your Knowledge?</h2>
        <p class="lead mb-5 mx-auto" style="max-width: 700px;" data-aos="fade-up" data-aos-delay="100">
            Put your skills to the test with hands-on projects and challenges.
            Building real applications is the best way to solidify your understanding.
        </p>
        <div class="d-flex gap-3 justify-content-center" data-aos="fade-up" data-aos-delay="200">
            <a href="https://www.kaggle.com/competitions" class="btn btn-light" target="_blank">
