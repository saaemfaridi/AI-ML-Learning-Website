                    <rect x="590" y="270" width="30" height="70" rx="3" fill="#4f46e5" fill-opacity="0.7"/>
                    
                    <!-- Digital Resources on Bottom Shelf -->
                    <rect x="200" y="370" width="80" height="60" rx="5" fill="#4f46e5" fill-opacity="0.6"/>
                    <rect x="300" y="370" width="80" height="60" rx="5" fill="#4f46e5" fill-opacity="0.8"/>
